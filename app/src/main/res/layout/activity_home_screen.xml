<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/splashsmaller"
    tools:context="com.example.nate.socialqs.HomeScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_welcome_text"/>

    <Button
        android:id="@+id/btn_ask_question"
        android:layout_height="wrap_content"
        android:text="@string/lbl_ask"
        android:layout_width="290dp"
        android:gravity="center"
        android:layout_marginTop="161dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_below="@+id/home_welcome_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_view_questions"
        android:layout_height="wrap_content"
        android:text="@string/lbl_view"
        android:layout_width="290dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_below="@+id/btn_ask_question"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
