<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profilePicture"
            android:src="@drawable/profile" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="219dp"
                android:layout_height="fill_parent"
                android:text="ENTER  QUESTION HERE"
                android:id="@+id/textViewQuestionText"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15dp"
                android:layout_weight="1.06"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/question_results_image"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/lowerContainer">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/choice1_results_image" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="New Text"
                android:id="@+id/buttonChoice1"
                android:gravity="center_vertical|center_horizontal"
                android:background="#555555"
                android:textColor="#ffffff"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/choice2_results_image" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="New Text"
                android:id="@+id/buttonChoice2"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                android:background="#555555"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/hiddenText1"
            android:background="#3A9ABC"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/hiddenText2"
            android:background="#555555"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hiddenLayout1"
            android:visibility="gone">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/hiddenImageview1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="New Text"
                android:id="@+id/hiddenTextview1"
                android:background="#3A9ABC"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hiddenLayout2"
            android:visibility="gone">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/hiddenImageview2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="New Text"
                android:id="@+id/hiddenTextview2"
                android:background="#555555"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
