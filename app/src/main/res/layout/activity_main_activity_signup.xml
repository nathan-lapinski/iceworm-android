<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/splashsmaller"
    tools:context="com.example.nate.socialqs.MainActivitySignup"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/uname_block"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_weight="1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:id="@+id/fld_username"
            android:hint="Username"
            android:background="#ffffff"
            android:autoText="false"
            android:layout_marginBottom="10dp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/fld_pwd"
            android:background="#ffffff"
            android:hint="Password"
            android:layout_marginBottom="10dp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/fld_pwd_2"
            android:background="#ffffff"
            android:hint="Confirm Password"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/fld_email"
            android:background="#ffffff"
            android:hint="Email Address" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_height="wrap_content"
            android:layout_below="@id/uname_block"
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_gravity="left" />

    </LinearLayout>

