<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:alpha="0.8"
    android:id="@+id/containerView">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/upperContainer">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/profilePicture"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="ENTER  QUESTION HERE"
            android:id="@+id/textViewQuestionText"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/lowerContainer">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="New Text"
            android:id="@+id/buttonChoice1"
            android:gravity="center_vertical|center_horizontal"
            android:background="#555555"
            android:textColor="#ffffff"
            android:layout_marginBottom="4dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="New Text"
            android:id="@+id/buttonChoice2"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:background="#555555"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/hiddenText1"
            android:background="#3A9ABC"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/hiddenText2"
            android:background="#555555"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>
